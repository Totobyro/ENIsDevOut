{% extends 'frontMonProfil.html.twig' %}


{% block titre %}
Modifier une Sortie
{% endblock %}


{% block body %}

<h1>Modifier une Sortie</h1>

<div class="container col-my">

	{{ form_start(form)}}

		<div class="row">
			<div class="col-4">
				{{ form_row(form.nom) }}
			</div>
			<div class="col-4">
				{{ form_row(form.dateHeureDebut) }}
			</div>
			<div class="col-4">
				{{ form_row(form.dateLimiteInscription) }}
			</div>
			<div class="col-4">
				{{ form_row(form.nbInscriptionsMax) }}
			</div>
			<div class="col-4">
				{{ form_row(form.duree) }}
			</div>
			<div class="col-4">
				{{ form_row(form.infosSortie) }}
			</div>
			<div class="col-4">
				{{ form_row(form.campus) }}
			</div>
			<div class="col-4">
				{{ form_row(form.lieu) }}
			</div>		
			<button class="btn btn-success" type="submit">Enregistrer modif</button>
			<a href="{{ path('home')}}">
				<button class="btn btn-danger">Retour</button>
			</a>
		</div>
		{{ form_end(form)}}
</div>

{% endblock %}


