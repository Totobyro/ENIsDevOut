{% extends 'base.html.twig' %}


{% block titre %}
	Campus |
	{{ parent() }}
{% endblock %}


{% block stylesheets %}

	<link
	rel="stylesheet" media="screen" href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,700">


	<!-- Custom styles for our template -->
	<link href="{{ asset ('assets/css/bootstrap.min.css')}}" rel="stylesheet">
	<link href="{{ asset ('assets/css/font-awesome.min.css')}}" rel="stylesheet">

	<link href="{{ asset ('assets/css/bootstrap-theme2.css')}}" rel="stylesheet">
	<link href="{{ asset ('assets/css/mainCampus.css')}}" rel="stylesheet">

{% endblock %}


{% block titrePhoto %}

	<h1 class="lead">Campus</h1>

{% endblock %}


{% block header %}

	<header id="headCampus">
		<div class="container">
			<div class="row">
			{% endblock %}


			{% block body %}
				<h1>{{ titre }}</h1>

				<br>
				<br>
				<div class="container">
					<div class="row">
						<div class="col-6">
							<div class="mt-4">
								<h3>Listes des Campus :</h3>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-6">
							<div style="overflow: scroll; height:250px;">
								<table class="table table-striped table-hover table-responsive">
									<thead>
										<tr>
											<th scope="col" class="col-1">Campus</th>
											<th scope="col" class="col-3">Action</th>
										</tr>
									</thead>
									<tbody>
										{% for user in campus %}
											<tr>
												<td>{{ user.nom }}</td>
												<td></td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>

		{% endblock %}
