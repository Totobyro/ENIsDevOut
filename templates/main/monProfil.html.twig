
{% extends 'frontMonProfil.html.twig' %}


{% block titre %}
	{{ titre }}
	|
	{{ parent() }}
{% endblock %}

    {% block stylesheets %}

<link href="{{ asset ('monProfilStyle2.css')}}" rel="stylesheet">
	{% endblock %}


{% block body %}
<div class="container-fluid text-center">
		<div class="col-2" id="imgProfil">
			<img src="{{ asset('img/' ~ participant.brochureFilename) }}"></img>
		</div>

	<div class="col-12" id="titreProfil">
		<h2>{{ titre }}</h2>
	</div>
	<br>
	<div class="formulaire">
		{{ form_start(participantForm)}}
		
		{{ form_row(participantForm.pseudo) }}
			
		{{ form_row(participantForm.prenom) }}
			
		{{ form_row(participantForm.nom) }}
		
		{{ form_row(participantForm.telephone) }}
				
		{{ form_row(participantForm.email) }}
				
		{{ form_row(participantForm.password) }}
			
		{{ form_row(participantForm.campus) }}

		{{ form_row(participantForm.brochure) }}
	</div>
		<div class="col-4 my-6">
			
				<button class="btn btn-info" type="submit">Modifier</button>
				{{ form_end(participantForm)}}
		</div>
		<div class="col-4">
				<a href="{{ path('home')}}">
				<button class="btn btn-danger">Retour</button>
		</div>
			</a>
			
		</div>
	</div>
</div>

{% endblock %}
