{% extends 'front.html.twig' %}


{% block titre %}
{% endblock %}

    {% block stylesheets %}  
    
    <link rel="stylesheet" media="screen" href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,700">

    <link href="{{ asset ('assets/css/bootstrap.min.css')}}" rel="stylesheet">

	<link href="{{ asset ('assets/css/font-awesome.min.css')}}" rel="stylesheet">
	<link href="{{ asset ('assets/css/bootstrap-theme.css')}}" rel="stylesheet">
    <link href="{{ asset ('assets/css/main6.css')}}" rel="stylesheet">
    {% endblock %}


{% block body %}


 <!-- etape 1 -->
    <div class="container">
        <!-- etape 2 ouverture de ligne -->
        <div class="row" id="datedujour">
            <div class="col-sm-10"></div> <!-- marge de 10 à gauche -->
                <div class="col-sm-2">
                <!-- Récupération de la date du jour à aligner display inline block -->

                <p id= "datedujour"> Date du jour  </p>   
                    <div id="current_date">    
                       
                        <script>
                            date = new Date();
                            year = date.getFullYear();
                            month = date.getMonth() + 1;
                            day = date.getDate();
                            document.getElementById("current_date").innerHTML = month + "/" + day + "/" + year;
                        </script>                 
                    </div>
                </div>      
        </div>

            <!-- Récupération  du User de la sessions en cours Pour affichage du nom -->
    <div class="row">
     <div class="col-sm-10"></div>
        <div class="col-sm-2" id="Participant"> Participant : {# {{ nom }} {{ prenom }} INLINE BLOCK #}
     </div>
     </div>

     <!-- Zones de Filtres -->
<div id="ZoneFiltres">
    <div class="row">
            <h3> Filtrer les Sorties </h3>
        <div class="col-sm-4" id="Zone1Filtre">
            <div id="Select">
                Campus <select name="campusSelect">
                <option selected="selected" value="Rennes">Rennes</option>
                <option value="Nantes">Nantes</option>
                </select>
            </div>

            <!-- Zone de recherche à aligner -->
            <div id="rechercheTextuelle"> 
               Le nom de la recherche contient :  <input type="search" id="inputRecherche" name="q">
            </div>

            <!-- zone de recherche par date à aligner -->
            <div id="rechercheDate">
                <label for="start">Entre</label>
                   <input data-provide="datepicker"
                        value="09/03/2022"
                        min="2018-01-01" max="2018-12-31">
                
                <label for="start">Et : </label>
                <input data-provide="datepicker"
                value="10/03/2022"
                min="09/03/2022" max="31/12/2099">

            </div>
        </div>

            <!-- Zone Check box Seconde colonne -->
        <div class="col-sm-4" id="Zone2Filtre">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault1">
                <label class="form-check-label" for="flexSwitchCheckDefault"> Sorties dont je suis l'organisateur/trice</label>
            </div>

             <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault2">
                <label class="form-check-label" for="flexSwitchCheckDefault">Sorties auxquelles je suis inscrit/e</label>
            </div>

             <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault3">
                <label class="form-check-label" for="flexSwitchCheckDefault">Sorties auxquelles je ne suis pas inscrit/e </label>
            </div>

             <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault4">
                <label class="form-check-label" for="flexSwitchCheckDefault"> Sorties passées </label>
            </div>

        </div>

        <!-- Zone Boutton Recherche -->

        <div class="col-sm-4" id="zoneBtnRecherche">
        <button type="button" class="btn btn-warning">Recherche</button>
        </div>
    </div>
</div>

        <div class="row">
            <!-- etape 3  -->
            <div class="col-12">
                <br>
                <table class="table table-striped ">
                    <thead>
                        {# <tr class="bg-success"> #}
                        <tr class="classementTableauRow">
                            <th>Nom de la sortie</th>
                            <th>Date de la sortie</th>
                            <th>Clotûre</th>
                            <th>Inscrit/place</th>
                            <th>Etat</th>
                            <th>Inscrit</th>
                            <th>Organisateur</th>
                            {# <th>Actions</th> #}
                        </tr>
                    </thead>
                    <tbody class="classementTableauTbody">
                            {% for s in tableauSortie %}
                        <tr>                           

                             <td>{{ s.nom}}</td>
                            <td>{{ s.dateHeureDebut|date('d-m-Y H:i') }}</td>
                            <td>{{ s.dateLimiteInscription|date('d-m-Y') }}</td>
                            <td> / {{ s.nbInscriptionsMax}}</td>
                            <td>{{ s.etat.libelle}}</td>
                            <td>{{ s.duree}}</td>
                            {# Ajouter seulement la 1ere lettre du prénom #}
                            <td>{{ s.organisateur.nom}} {{ s.organisateur.prenom}}</td> 
                                {# <a href="{{ path('detail_classement',{id:j.id})}}" class="btn btn-success">
                                <a href="{{ path('detail_classement',{id:j.id})}}" class="btn btnClassement">
                                <i class="fa fa-eye" aria-hidden="true"></i> 
                                </a>
                            </td> #}
                        </tr>
                        {% endfor %}            
                    </tbody>
                </table>
            </div>   
        </div>
        
        <!-- Boutton ajouter une sortie -->

         <div class="row">
            <div class="d-grid gap-2 col-6 mx-auto">
                <div class="text-center">
                <button class="btn btn-success" type="button">Ajouter une sortie</button>
                </div>
            </div>
         </div>
    </div> 


{% endblock %}
